# GitHub App credentials (not OAuth App)
# Create at: https://github.com/organizations/okstudio1/settings/apps -> New GitHub App
# Callback URL: https://gitconnect.pro/api/github-auth/callback
GITHUB_APP_CLIENT_ID=your_github_app_client_id
GITHUB_APP_CLIENT_SECRET=your_github_app_client_secret

# Netlify will set this automatically in production
# For local dev, this is set by netlify dev
SITE_URL=http://localhost:8888

# Supabase (for user/subscription storage)
# Get from: https://supabase.com -> Project Settings -> API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Frontend Supabase (exposed to browser - use VITE_ prefix)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Stripe (for subscription billing)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID=price_xxx

# API Keys for Managed Experience (Pro subscribers)
# These are YOUR keys, used by the proxy to call APIs on behalf of subscribers
DEEPGRAM_API_KEY=your_deepgram_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
